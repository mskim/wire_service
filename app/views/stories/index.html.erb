<p id="notice"><%= notice %></p>

<h3>나의기사</h3>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Char count</th>
      <th>publish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.date %></td>
        <td><%= story.title %></td>
        <td><%= story.char_count %></td>
        <td><%= story.publish %></td>

        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

