<p id="notice"><%= notice %></p>

<h1>Stories</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Reporter</th>
      <th>Group</th>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Quote</th>
      <th>Body</th>
      <th>Char count</th>
      <th>Draft</th>
      <th>Sent</th>
      <th>User</th>
      <th>Page</th>
      <th>Order</th>
      <th>Path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.date %></td>
        <td><%= story.reporter %></td>
        <td><%= story.group %></td>
        <td><%= story.title %></td>
        <td><%= story.subtitle %></td>
        <td><%= story.quote %></td>
        <td><%= story.body %></td>
        <td><%= story.char_count %></td>
        <td><%= story.draft %></td>
        <td><%= story.sent %></td>
        <td><%= story.user %></td>
        <td><%= story.page %></td>
        <td><%= story.order %></td>
        <td><%= story.path %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

